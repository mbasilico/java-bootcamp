<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:beans="http://www.springframework.org/schema/beans"
   xsi:schemaLocation="http://www.springframework.org/schema/security
     http://www.springframework.org/schema/security/spring-security-3.2.xsd
     http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
 
    
   <http use-expressions="true">
       <intercept-url pattern="/" access="isAnonymous()" />
      <intercept-url pattern="/login" access="hasAnyRole('ROLE_USER', 'ROLE_ADMIN')" />
      <intercept-url pattern="/logout" access="isAnonymous()" />
 	<intercept-url pattern="/admin" access="hasRole('ROLL_ADMIN')" />
       
 
       
 
  <form-login />
 
 
  <logout logout-url="/logout" logout-success-url="/logoutUser"
           delete-cookies="JSESSIONID" invalidate-session="true" />
   </http>
 
   <authentication-manager>
      
 
 
 
       <!-- authentication from database -->
       <authentication-provider>
           <jdbc-user-service data-source-ref="myDataSource"
               users-by-username-query="select username,password, role from cart.users where username=?"
               authorities-by-username-query="select username, role from cart.users where username=?" />
       </authentication-provider>
 
   </authentication-manager>
 
</beans:beans>